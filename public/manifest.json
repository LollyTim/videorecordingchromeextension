{
	"manifest_version": 2,
	"name": "Sanya Ololade",
    "description": "It can record a user's screen and send the recorded content to a specific online location {endpoint}",
	"icons": {
		"128": "./logo.png"
	},
	"version": "1.0.1",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "48":"./logo.png"
        }
    },
    
    "permissions": ["scripting", "tabs", "activeTab"],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}
